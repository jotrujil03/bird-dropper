<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0"/>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css"/>
  <style>
    .card-follow {
      border: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform .2s;
    }
    .card-follow:hover { transform: translateY(-4px); }
    .avatar-lg {
      width: 100px; height: 100px;
      object-fit: cover;
      border-radius: 50%;
      margin-top: -50px;
      border: 4px solid #fff;
      background: #f1f3f6;
    }
    .bio-text {
      font-size: 0.9rem;
      color: #555;
      margin: 0.5rem 0 0;
      min-height: 3em;
    }
  </style>
</head>
<body>
  {{> header}}

  <main class="container py-4">
    <h2 class="mb-4">People You Follow</h2>
    {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    {{#if following.length}}
      <div class="row gx-4 gy-4">
        {{#each following}}
          <div class="col-12 col-sm-6 col-md-4">
            <div class="card card-follow text-center p-0">
              <div class="card-body pt-5">
                <img src="{{avatar}}" alt="{{username}}" class="avatar-lg mx-auto d-block">
                <h5 class="mt-3">{{username}}</h5>
                {{#if bio}}
                  <p class="bio-text">{{bio}}</p>
                {{else}}
                  <p class="bio-text text-muted">No bio provided.</p>
                {{/if}}
                <div class="d-flex justify-content-center mt-3 gap-2">
                  <a href="/collections/{{id}}" class="btn btn-sm btn-primary">View Collection</a>
                  <button class="btn btn-sm btn-outline-danger unfollow-btn" data-id="{{id}}">
                    Unfollow
                  </button>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p class="text-muted">Youâ€™re not following anyone yet.</p>
    {{/if}}
  </main>

  <script>
    document.querySelectorAll('.unfollow-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        fetch(`/follow/${id}`, { method: 'DELETE' })
          .then(r => r.json())
          .then(d => {
            if (d.success) btn.closest('.col-12').remove();
            else alert(d.error || 'Failed to unfollow.');
          });
      });
    });
  </script>

  {{> footer}}
</body>
</html>
